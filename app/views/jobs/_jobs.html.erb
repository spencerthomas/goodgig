<% @jobs.each do |job| %>
<div class="col-sm-6 col-md-3">
		<div class="job-item">
			<div class="item-overlay">
				<div class="job-info">
					<%= link_to "Pitch", job_path(job), class: "btn btn-primary" %>
					<span class="tr-title">
						<a href="job-details.html"><%= link_to job.title %></a>
						<span><a href="#"><%= truncate(job.description, length: 120, seperator: ' ') %></a></span>
					</span>
					<ul class="tr-list job-meta">
							<li><span><i class="fa fa-money" aria-hidden="true"></i></span>$<%= job.budget %></li>
							<li><i class="fa fa-money" aria-hidden="true"></i>$<%= job.budget %></li>
					</ul>
					<ul class="job-social tr-list">
						<li><a href="#"><i class="fa fa-heart-o" aria-hidden="true"></i></a></li>
						<li><a href="#"><i class="fa fa-expand" aria-hidden="true"></i></a></li>
						<li><a href="#"><i class="fa fa-bookmark-o" aria-hidden="true"></i></a></li>
						<li><a href="job-details.html"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></li>
					</ul>
				</div>										
			</div>
			<div class="job-info">
				<div class="company-logo">
					<%= image_tag ("images/job"), class: "img-responsive" %>
				</div>
				<span class="tr-title">
					<a href="#"><%= link_to job.title %></a>
					<span><a href="#"><%= truncate(job.description, length: 120, seperator: ' ') %></a></span>
				</span>
				<ul class="tr-list job-meta">
					<li><span><i class="fa fa-money" aria-hidden="true"></i></span>$<%= job.budget %></li>
					<li><i class="fa fa-briefcase" aria-hidden="true"></i><%= job.experience %></li>
				</ul>
				<div class="time">
					<span class="pull-right"><%= time_ago_in_words(job.created_at) %></span>
				</div>			
			</div>
		</div>
	</div>
<% end %>